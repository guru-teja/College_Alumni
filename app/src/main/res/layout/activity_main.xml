<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.raso.xinthe.fl.MainActivity"
    android:background="@drawable/ground"

    android:id="@+id/back">
    <!--android:alpha="0.3">-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/front">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/hat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText

        android:id="@+id/editText"
        android:layout_below="@+id/imageView"
        android:drawableLeft="@drawable/nenvelop"
        android:hint="Email Address"
        android:backgroundTint="#ffffff"
        android:background="#ffffff"
        android:layout_width="700px"
        android:layout_height="100px"
         />

    <EditText

        android:id="@+id/editText2"
        android:drawableLeft="@drawable/newlock"
        android:hint="Password"
        android:backgroundTint="#ffffff"
        android:background="#ffffff"
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/button"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText2"
        android:background="#FF6347" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Facebook"
        android:id="@+id/button2"
        android:layout_marginTop="35dp"
        android:background="#3b5998"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/editText"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/fb"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Linkedin"

        android:textSize="15dp"
        android:id="@+id/button3"
        android:background="#0077B5"
        android:textColor="#ffffff"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:drawableLeft="@drawable/linked"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot Password?"

        android:id="@+id/textView"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="5dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Signup"
        android:id="@+id/textView2"
        android:layout_marginTop="5dp"

        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/button2"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COLLEGE ALUMNI"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</RelativeLayout>